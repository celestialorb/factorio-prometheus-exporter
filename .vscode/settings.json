{
    "Lua.diagnostics.globals": [
        "game",
        "script",
        "defines",
        "helpers",
        "prototypes"
    ],
    "[lua]": {
        "editor.formatOnSave": true,
        "editor.quickSuggestions": {
            "comments": "inline",
            "other": "on",
            "strings": "on"
        },
        "editor.semanticHighlighting.enabled": true,
        "editor.rulers": [
            80,
            90
        ]
    },
    "[python]": {
        "editor.formatOnSave": true,
        "editor.rulers": [
            120
        ]
    }
}
